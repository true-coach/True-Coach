@model IEnumerable<TrueCoach.Models.Journal>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<h4>You have @Model.Count() saved workout in the system.</h4>
<div>
    <form asp-controller="Journal" asp-action="Index">
        <p>
            Search By Name: <input type="text" name="EnterName">
            <input type="submit" value="Filter" />
        </p>
    </form>
</div>
<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entry)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Entry)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>