@model IEnumerable<TrueCoach.Models.Journal>

@{
    ViewData["Title"] = "Index";
    Layout = "_Layout";
}
<h4>You have @Model.Count() saved workout in the system.</h4>


<p> If your stress level is over 7-10, tune to Regeneration page and do not work out. </p>
<form asp-controller="Journal" asp-action="Index">
   
</form>
<p>
   <a asp-action="Create">Create Journal</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Entry)
            </th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Entry)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>